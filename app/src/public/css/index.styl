
// mixin
colorBorder(num, color)
  &:nth-child({num}) a
    border-left 8px solid color 

body
  max-width 698px
  margin 0 auto

hr
  border none
  border-bottom 1px solid rgba(0,0,0,0.3)
  box-shadow 1px 1px 2px rgba(0,0,0,0.1)

.demos
  font-size 24px
  list-style-type none
  margin 40px
  padding 0 
  & li 
    & a 
      display block
      margin-top 10px
      padding 20px
      box-shadow 1px 1px 3px rgba(0,0,0,0.3)
      text-decoration none
      color #555
      transition all 0.1s ease-in-out
    colorBorder(1,#34C5C5)
    colorBorder(2,#E4956c)
    colorBorder(3,rgb(195,91,147))
    colorBorder(4,rgb(149,192,85))
  & a:link,
  & a:visited
    background-color white
  & a:hover,
  & a:active
    background-color rgba(0,0,0,0.03)

.reference
  max-width 800px
  overflow hidden
  margin 40px
  box-shadow 0 1px 4px rgba(0,0,0,0.3)
  padding 20px
  & h3
    margin-left 20px

.reference-list
  & li
    margin-top 10px
  & a
    text-decoration none
    color #444
  & a:link,
  & a:visited
    text-decoration none
  & a:hover,
  & a:active
    text-decoration underline



